<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/background"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/notify_thumb"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_default_album" />
    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/notify_title"
            android:text="노래이르으으음"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:paddingRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/notify_subtitle"
            android:text="업로더어어어"
            android:textSize="13sp"
            android:singleLine="true"
            android:textColor="@color/text_lgt_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/notify_play"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_notify_play"
        android:clickable="true"
        android:layout_width="44dp"
        android:layout_height="44dp" />
    <ImageView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/notify_next"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_notify_next"
        android:clickable="true"
        android:layout_width="22dp"
        android:layout_height="22dp" />
</LinearLayout>