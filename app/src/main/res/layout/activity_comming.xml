<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:weightSum="10"
    android:orientation="vertical">
    <Space
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <kr.edcan.u_stream.view.FontTextView
        android:id="@+id/player_tv_title"
        android:text="μ'Stream"
        android:gravity="center"
        android:textSize="21sp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <kr.edcan.u_stream.view.FontTextView
        android:id="@+id/player_tv_subtitle"
        android:text="by EDCAN"
        android:gravity="center_horizontal|top"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:layout_marginTop="4dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:singleLine="true"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_weight="5.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="26dp"
            android:src="@drawable/bg_default_album"
            android:layout_centerInParent="true"
            android:id="@+id/player_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <kr.edcan.u_stream.view.FontTextView
        android:text="Coming Soon..."
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <kr.edcan.u_stream.view.FontTextView
        android:text="베타 테스팅을 통해\n앱의 완성도를 높이고 있습니다."
        android:gravity="center_horizontal|top"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:layout_marginTop="4dp"
        android:paddingLeft="56dp"
        android:paddingRight="56dp"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/goBeta"
        android:background="@color/lgt_background"
        android:textColor="@color/colorPrimary"
        android:text="베타 참여"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>